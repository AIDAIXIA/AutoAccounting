<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attr/materialCardViewElevatedStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/groupCard"
    android:layout_marginBottom="@dimen/padding"
    app:cardCornerRadius="@dimen/radius"
    app:cardBackgroundColor="?attr/colorSurfaceContainer"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/msg_github_button"
            style="@style/CardLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:animateLayoutChanges="true">

            <LinearLayout
                android:id="@+id/top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/border_side"
                android:layout_marginEnd="@dimen/border_side"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/type"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_auto"
                    app:tint="?attr/colorPrimary" />


                <TextView
                    android:id="@+id/app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="@dimen/border_side"
                    android:text="测试"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="?colorOnSurface" />
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            >

            <Button
                style="?attr/materialIconButtonFilledStyle"
                android:id="@+id/deleteData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"

                app:icon="@drawable/icon_delete"
                tools:ignore="RelativeOverlap" />

            <Button

                style="?attr/materialIconButtonFilledTonalStyle"
                app:icon="@drawable/icon_edit"
                android:id="@+id/editRule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@+id/deleteData"

                tools:ignore="RelativeOverlap" />
        </RelativeLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>